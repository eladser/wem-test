# WebSocket Configuration
VITE_WS_URL=ws://localhost:5000/ws/energy-data
VITE_WS_URL_DIRECT=ws://localhost:5000/ws/energy-data

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=WEM Dashboard
VITE_APP_VERSION=2.1.0
VITE_APP_DESCRIPTION=Wise Energy Management Dashboard

# Development Configuration
VITE_DEBUG=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=false

# Feature Flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EXPORT=true

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHING=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# Monitoring Configuration
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Database Configuration (for backend)
DATABASE_URL=sqlite:./dev.db
DATABASE_TYPE=sqlite

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLE=false

# Authentication Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h
SESSION_SECRET=your-session-secret-key-here

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@wem-dashboard.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DESTINATION=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DESTINATION=./logs

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_INTERVAL=5000