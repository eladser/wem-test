# WEM Dashboard Enhanced Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000

# =============================================================================
# Enhanced Feature Flags
# =============================================================================
# Enable/disable enhanced features
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_GRID_EDITOR=true
VITE_ENABLE_SETTINGS_MANAGEMENT=true
VITE_ENABLE_USER_MANAGEMENT=true
VITE_ENABLE_EXPORT_FEATURES=true

# =============================================================================
# Real-Time Configuration
# =============================================================================
# WebSocket connection settings
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10
VITE_WS_HEARTBEAT_INTERVAL=30000

# =============================================================================
# Performance Settings
# =============================================================================
# Optimization flags
VITE_ENABLE_VIRTUAL_SCROLLING=true
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_CACHE_TIMEOUT=300000

# =============================================================================
# Security Configuration
# =============================================================================
# Authentication settings
VITE_JWT_REFRESH_THRESHOLD=300000
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_2FA=true

# =============================================================================
# Development Settings
# =============================================================================
# Debug and development flags
VITE_DEBUG=false
VITE_SHOW_DEV_TOOLS=false
VITE_ENABLE_PERFORMANCE_MONITOR=true
VITE_LOG_LEVEL=info

# =============================================================================
# Analytics Configuration
# =============================================================================
# Analytics and monitoring
VITE_ENABLE_USER_ANALYTICS=true
VITE_ANALYTICS_ENDPOINT=
VITE_ERROR_TRACKING_DSN=

# =============================================================================
# Grid Editor Settings
# =============================================================================
# Interactive grid configuration
VITE_GRID_AUTO_SAVE_INTERVAL=30000
VITE_GRID_MAX_COMPONENTS=50
VITE_GRID_SNAP_TO_GRID=true
VITE_GRID_ENABLE_ANIMATIONS=true

# =============================================================================
# Theme and UI Configuration
# =============================================================================
# UI preferences
VITE_DEFAULT_THEME=dark
VITE_ENABLE_GLASSMORPHISM=true
VITE_ANIMATION_SPEED=normal
VITE_ENABLE_SOUND_EFFECTS=false

# =============================================================================
# Notification Settings
# =============================================================================
# Push notifications and alerts
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_NOTIFICATION_DURATION=4000
VITE_MAX_NOTIFICATIONS=3

# =============================================================================
# Export and Integration
# =============================================================================
# Data export settings
VITE_EXPORT_FORMAT_DEFAULT=csv
VITE_MAX_EXPORT_RECORDS=10000
VITE_ENABLE_API_INTEGRATIONS=true

# =============================================================================
# Mobile and Responsive
# =============================================================================
# Mobile-specific settings
VITE_MOBILE_BREAKPOINT=768
VITE_TABLET_BREAKPOINT=1024
VITE_ENABLE_TOUCH_GESTURES=true

# =============================================================================
# Advanced Settings
# =============================================================================
# Advanced configuration options
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_ENABLE_BETA_FEATURES=false
VITE_API_TIMEOUT=30000
VITE_REQUEST_RETRY_COUNT=3

# =============================================================================
# Monitoring and Logging
# =============================================================================
# Application monitoring
VITE_ENABLE_ERROR_BOUNDARY_LOGGING=true
VITE_ENABLE_PERFORMANCE_LOGGING=true
VITE_LOG_API_REQUESTS=false
VITE_LOG_WEBSOCKET_EVENTS=false

# =============================================================================
# Production Overrides
# =============================================================================
# These will be overridden in production environment
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_WS_URL=wss://api.yourdomain.com
# VITE_DEBUG=false
# VITE_SHOW_DEV_TOOLS=false
# VITE_LOG_LEVEL=error
